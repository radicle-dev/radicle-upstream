{
  "name": "radicle-upstream",
  "version": "0.0.1",
  "build": {
    "appId": "radicle-upstream.monadic.mvp",
    "files": [
      "public/**/*",
      "native/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "extraResources": [
      {
        "from": "dist/proxy",
        "to": "proxy"
      }
    ]
  },
  "main": "./native/main.comp.js",
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "chokidar": "^3.2.2",
    "color": "^3.1.2",
    "cypress": "^3.7.0",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "graphql-schema-linter": "^0.2.2",
    "husky": ">=1",
    "istextorbinary": "^3.0.0",
    "lint-staged": "^10.0.0-0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-externals": "^2.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^4.0.4",
    "svelte": "^3.15.0",
    "svelte-spa-router": "^1.2.1",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "start": "run-p --race svelte:watch fake:radicle:start proxy:start electron:start",
    "test": "TZ='UTC' run-p --race fake:radicle:start:test proxy:start ci:test",
    "dist": "rm -rf ./dist && mkdir ./dist && yarn svelte:clean && yarn svelte:build && yarn proxy:build && cp ../proxy/target/release/proxy dist && electron-builder",
    "ci:test": "TZ='UTC' wait-on http://localhost:8080 && wait-on http://localhost:4000 && yarn svelte:build && yarn cypress:run",
    "ci:dist": "rm -rf ./dist && mkdir ./dist && cp ../proxy/target/release/proxy dist && electron-builder",
    "electron:start": "wait-on ./public/bundle.js && wait-on ./native/main.comp.js && wait-on http://localhost:8080 && NODE_ENV=development electron .",
    "svelte:clean": "rm -rf public/bundle.*",
    "svelte:build": "yarn svelte:clean && rollup -c",
    "svelte:watch": "yarn svelte:clean && rollup -c -w",
    "proxy:build": "cd ../proxy && cargo build --release",
    "proxy:start": "cd ../proxy && cargo run --release -- memory",
    "cypress:run": "yarn run cypress run",
    "cypress:open": "yarn run cypress open",
    "generate:colors": "babel-node --presets \"@babel/env\" scripts/generate-colors.js",
    "fake:radicle:start": "babel-node --presets \"@babel/env\" scripts/git-graphql-browser.js",
    "fake:radicle:start:ci": "yarn fake:radicle:start --ci",
    "fake:radicle:start:test": "yarn fake:radicle:start --test"
  },
  "dependencies": {
    "apollo-boost": "^0.4.4",
    "graphql": "^14.5.8",
    "graphql-yoga": "^1.18.3",
    "svelte-apollo": "^0.3.0",
    "timeago.js": "^4.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,html}": [
      "prettier --write",
      "git add"
    ],
    "*.svelte": [
      "prettier --plugin-search-dir=. --write",
      "git add"
    ]
  }
}
