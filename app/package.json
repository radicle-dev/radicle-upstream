{
  "name": "oscoin-mvp",
  "version": "0.1.0",
  "scripts": {
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "test": "bsb -make-world && jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "webpack": "webpack -w",
    "webpack:production": "NODE_ENV=production webpack",
    "server": "webpack-dev-server",
    "deploy": "rm -rf ./build && yarn clean && yarn build && yarn webpack:production && firebase deploy",
    "fetch-schema": "yarn send-introspection-query http://localhost:8080/graphql"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/react-hooks": "^3.1.0",
    "bs-css": "^9.0.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "reason-apollo": "^0.17.0",
    "reason-apollo-hooks": "^2.5.1",
    "reason-react": ">=0.7.0",
    "reductive": "https://github.com/oscoin/reductive#hooks"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.9",
    "bs-jest-dom": "^2.0.1",
    "bs-platform": "^5.0.4",
    "bs-react-testing-library": "^0.6.0",
    "copy-webpack-plugin": "^5.0.4",
    "graphql_ppx": "^0.2.8",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "reductive-dev-tools": "^0.2.6",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "webpack": "^4.0.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{re,rei}": [
      "refmt --in-place",
      "git add"
    ]
  }
}
